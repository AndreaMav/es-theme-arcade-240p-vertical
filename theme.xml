         <pos>0.60 0.215</pos>
         <size>0.35 0.13</size>
      </image>
      <textlist name="gamelist">
         <origin>0 0</origin>
         <pos>0.08 0.64</pos>
         <size>0.85 0.30</size>
         <selectorColor>001B9D</selectorColor>
         <selectedColor>ffffff</selectedColor>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>7a6161</secondaryColor>
         <fontPath>./art/C64.ttf</fontPath>
         <fontSize>0.033</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
         <alignment>center</alignment>
         <lineSpacing>1.25</lineSpacing>
      </textlist>
   </view>

