<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

   <view name="system">
      <image name="system-background" extra="true">
         <origin>0 0</origin>
         <pos>0 0.5</pos>
         <size>0.4 0.15</size>
         <tile>false</tile>
        <path>./art/arcand.png</path>
        <rotation>-90</rotation>
      </image>
      <carousel name="systemcarousel">
        <type>vertical</type>
        <pos>0 0</pos>
        <size>1 1</size>
        <logoScale>1</logoScale>
        <logoSize>0.98 0.20</logoSize>
        <color>00000000</color>
        <maxLogoCount>5</maxLogoCount>
      </carousel>
      <text name="systemInfo">
         <pos>0 0.540</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ffffff</color>
         <fontPath>./art/TitilliumWeb-SemiBold.ttf</fontPath>
         <!--dim font conteggio giochi-->
	     <fontSize>0.05</fontSize>
      </text>            
   </view>

   <view name="system,basic,detailed,video">
      <helpsystem name="help">
         <fontSize>0.023</fontSize>
         <pos>0.02 0.98</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff50</iconColor>
      </helpsystem>
   </view>

   <view name="basic,detailed,video">
      <image name="logo">
         <origin>0 0</origin>
         <pos>0.28 0.005</pos>
         <size>0.55 0.20</size>
      </image>
      <image name="logo_helper" extra="true">
